mixin arrow2()
	.swiper-button-hand.btn-primary.swiper-button-hand-prev.swiper-button-prev
		+icon('long-arrow-alt-left')
	.swiper-button-hand.btn-primary.swiper-button-hand-next.swiper-button-next
		+icon('long-arrow-alt-right')

 
